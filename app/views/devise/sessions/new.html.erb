<div class = "col-md-6 col-md-offset-3 devise">
<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, required: false, autofocus: true, input_html: { class: "username" }  %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, :as => :boolean, label: false, inline_label: true if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>