  <h3><%= @article["title"] %></h3>
  <p><b>Authors: </b><%=@article["authors"] %></p>
  <p><b>Journal: </b><%=@article["journal"]%><b>, Published on: </b><%= @article["pubdate"]%></p>
  <p><b>Link: </b><%="http://www.ncbi.nlm.nih.gov/pubmed/"+@pubmed_id%></p>
  <b>Abstract:</b>
  <br><%=@article["abstract"]%></br>
  <div id="modal_error_explanation"></div>  
  <div id="research_findings_form_<%= @point_id %>" class ="form">
    <%= form_tag("/researches/fill_in_form", remote: true, class: "btn-form") do%>
      <%= hidden_field_tag 'title', @article["title"] %>
      <%= hidden_field_tag 'authors', @article["authors"] %>
      <%= hidden_field_tag 'journal', @article["journal"] %>
      <%= hidden_field_tag 'pubdate', @article["pubdate"] %>
      <%= hidden_field_tag 'link', "http://www.ncbi.nlm.nih.gov/pubmed/"+@pubmed_id %>
      <%= hidden_field_tag 'point_id', @point_id %>
      <%= hidden_field_tag 'search_terms', params[:search_terms] %>     
      <%= submit_tag "Use this", class: "btn btn-sm btn-primary" %> 
    <%end%> 
    <%= form_tag("/researches/pubmed_search", remote: true, class: "btn-form") do%>
      <%= hidden_field_tag 'search_terms', params[:search_terms] %>
      <%= hidden_field_tag 'point_id', @point_id %> 
      <%= submit_tag "Back to results", class: "btn btn-sm btn-default" %>
    <%end%>
  </div>
   
