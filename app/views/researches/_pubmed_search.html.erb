<%= form_tag("/researches/pubmed_search", :remote => true) do%>
  <label for="search_terms"><b>Search Pubmed and our database</b></label>
  <div>
    <%= text_field_tag "search_terms", nil, placeholder:"Search..." %>
    <%if @point_id.nil?%>
      <%= hidden_field_tag 'point_id', point_id %>
    <%else%> 
      <%= hidden_field_tag 'point_id', @point_id %> 
    <%end%>
    <%= submit_tag "Search", class: "btn btn-small btn-primary" %>
  </div>  

  <%if @articles.nil?%>
  <%else%>
    <div>
      <b>Search terms: </b><%=params[:search_terms]%>
    </div>  
  <%end%>
<%end%>  

