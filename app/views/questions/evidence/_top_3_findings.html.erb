 
<ul class= 'research'>
	<% findings = point.findings.sort {|a,b| b.research.score <=> a.research.score}.first(3)%>
	<% findings.each do |finding| %>
		<%= render 'questions/evidence/findings', finding: finding, point: point %>
	<%end%> 
</ul>
<% if point.findings.count >3 %>
	<%= link_to "View all research("+point.findings.count('research_id', distinct:true).to_s+")", all_research_question_path(point: point), class: "btn-link",remote: true%>
<%end%>		