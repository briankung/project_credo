<%= simple_form_for @question do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :question, placeholder: "Ask a question like 'Is cold water bad for digestion?'" %>

  <%= f.input :question_type, collection: ['Yes/No','Multiple Answers'], selected: @question_type %>

  <%if @question_type == 'Yes/No'%>
    <%= f.input :answers, placeholder: "Only if you've selected multiple answers, add potential answers separated by a comma.  For example, answers to 'What is the best diet?' could be 'low carb, low fat, raw foods'", disabled: true%>
  <%else%>
    <%= f.input :answers, placeholder: "Only if you've selected multiple answers, add potential answers separated by a comma.  For example, answers to 'What is the best diet?' could be 'low carb, low fat, raw foods'", disabled: false%>
  <%end%>      

  <%= f.input :description, placeholder: "Compose a description,..." %>

  <%= f.button :submit, "Save changes", class: "btn btn-md btn-primary btn-form" %>
  <%if @question.new_record?%>
  <%else%>
    <%=link_to "Cancel", question_path(@question)%>
  <%end%>    
<%end%>
   