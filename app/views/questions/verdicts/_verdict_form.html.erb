<%= simple_form_for (verdict) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :question_id, value: @question.id %>
  <%if verdict == [@question, @verdict]%> 
    <%= f.hidden_field :user_create_id, value: current_user.id %>
  <%end%>   
  <div class="panel panel-default">
    <div class="panel-heading"><%= f.input :short, placeholder: "Something short", class: "verdict_form" %>
      <span class="countdown">0 of 140</span>
    </div>
    
    <div class="panel-body">
      <%= f.input :verdict, placeholder: "Compose a verdict..." %>
    </div>
    <%if verdict == [@question, @verdict]%>
      <%= f.submit "Add verdict", class: "btn btn-small btn-primary", style: "margin-bottom: 10px; margin-left: 10px" %> <span><%=link_to "Cancel", question_path(@question) %></span>
    <%else%>  
      <%= f.submit "Edit verdict", class: "btn btn-small btn-primary", style: "margin-bottom: 10px; margin-left: 10px" %> <span><%=link_to "Cancel", question_path(@question) %></span>
    <%end%>      
  </div>
<%end%>
