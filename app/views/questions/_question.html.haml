%li
  .row
    .col-md-1.votes{id: "question#{question.id}"}
      = render 'questions/upvote_downvote_question', question: question
    .col-md-11  
      = link_to question.question, question
      .pix14
        Answers: 
        -if question.question_type == "Yes/No"  
          =question.question_type
        -else
          =question.answers   
        -if question.points.joins(:associations).present?
          %div=pluralize(question.points.joins(:associations).size,'Research finding')
          -if question.verdicts.present?
            %div=pluralize(question.verdicts.size,'Verdict')
          -else 
            %div No verdicts 
        -else
          %div Not yet researched  

